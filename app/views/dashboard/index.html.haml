%div{ class: "max-w-6xl mx-auto px-6 py-10 text-stone-900" }

  %h1{ class: "text-3xl font-semibold mb-6" } Draft Board

  %p.mb-6
    Pitchers: #{@team.pitchers_count} |
    Catchers: #{@team.catchers_count} |
    Infield: #{@team.infield_count}

  - best = @ranked_players.first

  - if best
    %div{ class: "border-2 border-green-600 p-6 mb-10" }
      %p.text-sm.text-stone-600 Recommended Pick
      %h2.text-2xl.font-semibold.mb-2= best.name
      %p.mb-1 Position: #{best.primary_position}
      %p.mb-1 Recommendation Score: #{best.recommendation_score(@team)}
      %p.mb-4 Overall Score: #{best.overall_score}
      = button_to "Draft #{best.name}", draft_player_path(best), method: :post, class: "border border-stone-900 px-4 py-2 hover:bg-stone-900 hover:text-white"

  %h2{ class: "text-xl font-semibold mb-4" } Full Ranked Board

  %table{ class: "w-full text-sm border-collapse" }
    %thead
      %tr{ class: "border-b border-stone-300 text-left" }
        %th.py-3 Rank
        %th.py-3 Name
        %th.py-3 Pos
        %th.py-3 Rec
        %th.py-3 Overall
        %th.py-3
    %tbody
      - @ranked_players.each_with_index do |player, index|
        %tr{ class: "border-b border-stone-200" }
          %td.py-4= index + 1
          %td.py-4= link_to player.name, player_path(player), class: "underline"
          %td.py-4= player.primary_position
          %td.py-4= player.recommendation_score(@team)
          %td.py-4= player.overall_score
          %td.py-4= button_to "Draft", draft_player_path(player), method: :post, class: "border border-stone-900 px-3 py-1 hover:bg-stone-900 hover:text-white"
