%div{ class: "max-w-6xl mx-auto px-6 py-10 text-stone-900" }

  %h1{ class: "text-3xl font-semibold mb-8" } Draft Dashboard

  %div{ class: "grid grid-cols-1 sm:grid-cols-3 gap-6 mb-10" }

    %div{ class: "border border-stone-300 p-6" }
      %p.text-sm.text-stone-600 Total Players
      %p.text-2xl.font-semibold= @total_players

    %div{ class: "border border-stone-300 p-6" }
      %p.text-sm.text-stone-600 Drafted
      %p.text-2xl.font-semibold= @drafted_players

    %div{ class: "border border-stone-300 p-6" }
      %p.text-sm.text-stone-600 Undrafted
      %p.text-2xl.font-semibold= @undrafted_players

  %div{ class: "grid grid-cols-1 md:grid-cols-2 gap-10" }

    %div
      %h2{ class: "text-xl font-semibold mb-4" } Top 5 Pitchers Available

      %table{ class: "w-full text-sm" }
        %thead
          %tr
            %th.text-left Name
            %th.text-left Score
        %tbody
          - @top_pitchers.each do |player|
            %tr
              %td= link_to player.name, player_path(player), class: "underline"
              %td= player.pitcher_score

    %div
      %h2{ class: "text-xl font-semibold mb-4" } Top 5 Overall Available

      %table{ class: "w-full text-sm" }
        %thead
          %tr
            %th.text-left Name
            %th.text-left Score
        %tbody
          - @top_overall.each do |player|
            %tr
              %td= link_to player.name, player_path(player), class: "underline"
              %td= player.overall_score

  - if @risk_players.any?
    %div{ class: "mt-12" }
      %h2{ class: "text-xl font-semibold mb-4 text-red-600" } Risk Flag Players

      %ul{ class: "list-disc ml-6 text-sm" }
        - @risk_players.each do |player|
          %li= link_to player.name, player_path(player), class: "underline text-red-600"

  %div{ class: "mt-12 flex gap-6" }
    = link_to "All Players", players_path, class: "border border-stone-900 px-6 py-2 hover:bg-stone-900 hover:text-white"
    = link_to "Add Player", new_player_path, class: "border border-stone-900 px-6 py-2 hover:bg-stone-900 hover:text-white"
